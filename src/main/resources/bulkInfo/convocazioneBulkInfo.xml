<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<bulkInfo xmlns="http://www.cnr.it/schema/BulkInfo_v2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" longDescription="Convocazione"
          shortDescription="Convocazione" xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo_v2 BulkInfo_v2">

    <fieldProperty 
        inputType="TEXT" 
        label="label.convocazione.numero" 
        name="numeroConvocazione" 
        property="numeroConvocazione">
        <jsonvalidator maxlength="5" required="true" digits="true"/>
    </fieldProperty>

    <fieldProperty 
        inputType="TEXT" 
        label="label.convocazione.data"         
        name="data" 
        property="data"
        widget="ui.datetimepicker">
        <jsonvalidator requiredWidget="true"/>
    </fieldProperty>

    <fieldProperty 
        inputType="TEXTAREA" 
        label="label.convocazione.luogo" 
        name="luogo" 
        property="luogo">
        <jsonvalidator required="true"/>
    </fieldProperty>
    <fieldProperty 
        inputType="SELECT" 
        labelClass="control-label"
        name="application" 
        property="application" 
        multiple="multiple"
        widget="ui.select">
        <jsonlabel default="label.convocazioni.application" key="label.convocazioni.application" />
    </fieldProperty>

    <fieldProperty 
        inputType="TEXT" 
        class="btn-medium" 
        default="COLLOQUIO" 
        name="tipoSelezione" 
        property="tipoSelezione" 
        widget="ui.radio">
            <jsonlist>
                <listElement defaultLabel="Colloquio" key="COLLOQUIO" label="label.colloquio"/>
                <listElement defaultLabel="Prova scritta" key="PROVASCRITTA" label="label.scritto"/>
                <listElement defaultLabel="Prima prova scritta" key="PRIMAPROVASCRITTA" label="label.primoscritto"/>                
                <listElement defaultLabel="Seconda prova scritta" key="SECONDAPROVASCRITTA" label="label.secondoscritto"/>
                <listElement defaultLabel="Orale" key="ORALE" label="label.orale"/>
            </jsonlist>
    </fieldProperty>

    <fieldProperty 
        inputType="TEXTAREA" 
        label="label.convocazione.firma"         
        name="firma" 
        property="firma">
        <jsonvalidator required="true"/>
    </fieldProperty>

    <fieldProperty 
        inputType="TEXTAREA" 
        label="label.convocazione.note" 
        name="note" 
        property="note"
        widget="ui.wysiwyg">
    </fieldProperty>

    <formFieldProperty class="input-small" name="numeroConvocazione"/>
    <formFieldProperty class="input-large" name="data" same-line="true"/>
    <formFieldProperty class="input-xxlarge" name="luogo" rows="2"/>
    <formFieldProperty class="input-xxlarge" name="application"/>
    <formFieldProperty name="tipoSelezione"/>
    <formFieldProperty class="input-xxlarge" name="firma" rows="2"/>
    <formFieldProperty class="input-xxlarge" name="note" rows="5"/>

</bulkInfo>