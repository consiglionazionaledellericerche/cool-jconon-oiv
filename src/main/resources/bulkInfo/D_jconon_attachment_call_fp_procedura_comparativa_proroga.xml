<bulkInfo
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.cnr.it/schema/BulkInfo_v2"
        cmisQueryName="jconon_attachment:call_fp_procedura_comparativa_proroga"
        cmisTypeName="D:jconon_attachment:call_fp_procedura_comparativa_proroga"
        cmisExtendsName="D:jconon_attachment:document"
        longDescription="Proroga dei Termini"
        shortDescription="Proroga dei Termini"
        xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo_v2 BulkInfo_v2">

    <fieldProperty
            parentGroupClass="span3"
            class="input-medium"
            inputType="TEXT"
            todayHighlight="false"
            todayBtn="false"
            startDate="+1d"
            label="label.procedura_comparativa_data_fine_proroga"
            name="procedura_comparativa_data_fine_proroga"
            property="jconon_attachment:procedura_comparativa_data_fine_proroga"
            widget="ui.datepicker">
