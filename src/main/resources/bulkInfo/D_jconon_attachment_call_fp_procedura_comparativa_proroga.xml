    <fieldProperty
            class="input-small"
            inputType="TEXT"
            label="label.procedura_comparativa_ora_fine_proroga"
            name="procedura_comparativa_ora_fine_proroga"
            property="jconon_attachment:procedura_comparativa_ora_fine_proroga"
