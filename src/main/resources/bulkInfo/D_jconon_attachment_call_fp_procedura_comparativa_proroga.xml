    <fieldProperty
            class="span5"
            inputType="TEXT"
            label="cm.title"
            labelClass="control-label"
            name="title"
            property="cm:title"/>
    <fieldProperty
            class="span5"
            inputType="TEXTAREA"
            label="cm.description"
            labelClass="control-label"
            name="description"
            nullable="true"
            property="cm:description"/>

    <formFieldProperty name="title"/>
    <formFieldProperty name="description"/>
    <formFieldProperty
            name="procedura_comparativa_data_fine_proroga"/>
    <formFieldProperty
            name="procedura_comparativa_ora_fine_proroga"/>

    <columnFieldProperty name="title"/>
    <columnFieldProperty name="description"/>
