<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<import resource="classpath*:META-INF/cool-common-web-context.xml" />
	<import resource="classpath*:META-INF/cool-model-context.xml" />


	<bean id="callService" class="it.cnr.jconon.service.call.CallService"/>
	<bean id="applicationService" class="it.cnr.jconon.service.application.ApplicationService">
		<property name="documentsNotRequired" ref="documentsNotRequired"/>
	</bean>
	<bean id="printService" class="it.cnr.jconon.service.PrintService"/>
	<bean id="bulkInfoExtendAspects" class="java.util.ArrayList">
	    <constructor-arg>
	        <list>
	           <value>P:jconon_application:aspect_condanne_penali_rapporto_lavoro</value>
	        </list>
	    </constructor-arg>
	</bean>

	<!-- Cache Bean Definition -->
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationAspects"/>
		<property name="parentTypes">
			<list>
				<value>P:jconon_application:aspects</value>
			</list>
		</property>
		<property name="bulkInfos" ref="bulkInfoExtendAspects"/>
	</bean>

	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationAttachments"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:document</value>
			</list>
		</property>
		<property name="defaultTypes">
			<list>
				<value>D:jconon_curriculum_vitae:attachment</value>
				<value>D:jconon_documento_riconoscimento:attachment</value>
				<value>D:jconon_tesi_laurea:attachment</value>
				<value>D:jconon_allegato_generico:attachment</value>
				<value>D:jconon_nulla_osta_altro_ente:attachment</value>
				<value>D:jconon_dic_sost:attachment</value>
				<value>D:jconon_modello_verifica_attivita:attachment</value>
				<value>D:jconon_relazione_attivita_svolta:attachment</value>
				<value>D:jconon_pagamenti_diritti_segreteria:attachment</value>
				<value>D:jconon_pubblicazione:attachment</value>
				<value>D:jconon_domanda_facsimile:attachment</value>
			</list>
		</property>
		<property name="aspect" value="P:jconon_attachment:generic_document"/>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationCurriculums"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:cv_element</value>
			</list>
		</property>
	</bean>

	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationSchedeAnonime"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_scheda_anonima:document</value>
			</list>
		</property>
	</bean>

	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistTypeWithMandatoryAspects"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:cv_element</value>
				<value>D:jconon_attachment:prodotto</value>
				<value>F:jconon_call:folder</value>
			</list>
		</property>
		<property name="includeMandatoryAspects"  value="true"/>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationProdotti"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:prodotto</value>
			</list>
		</property>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistCallAttachments"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:call_abstract</value>
			</list>
		</property>
	</bean>
	<bean name="jsonlistApplicationNoAspectsItalian" class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationNoAspectsItalian"/>
		<property name="parentTypes">
			<list>
			</list>
		</property>
		<property name="defaultTypes">
			<list>
				<value>P:jconon_application:aspect_godimento_diritti</value>
			</list>
		</property>
	</bean>
	<bean name="jsonlistApplicationNoAspectsForeign" class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationNoAspectsForeign"/>
		<property name="parentTypes">
			<list>
			</list>
		</property>
		<property name="defaultTypes">
			<list>
				<value>P:jconon_application:aspect_iscrizione_liste_elettorali</value>
			</list>
		</property>
	</bean>
	<bean id="documentsNotRequired" class="org.springframework.beans.factory.config.ListFactoryBean">
	  <property name="sourceList">
	    <list>
	      <value>D:jconon_allegato_generico:attachment_mono</value>
	      <value>D:jconon_programma_di_mandato:attachment</value>
	    </list>
	  </property>
	</bean>

	<!-- File Cache -->

	<bean class="it.cnr.jconon.service.cache.ApplicationFieldNotRequiredService"/>
	<bean id="callTypeService" class="it.cnr.jconon.service.cache.CallTypeService"/>
	<bean class="it.cnr.jconon.service.cache.ApplicationAffixService"/>
	<bean id="cacheCompetitionFolderService" class="it.cnr.jconon.service.cache.CompetitionFolderService"/>
	<bean class="it.cnr.jconon.service.call.ManagersCallService">
		<property name="zone" value="AUTH.EXT.gestori"/>
	</bean>

	<bean id="exportApplications" class="it.cnr.jconon.rest.ExportApplications"></bean>
	<bean id="exportApplicationsService" class="it.cnr.jconon.service.application.ExportApplicationsService"></bean>


	<bean name="BulkInfoF_jconon_application_folder,BulkInfoF:jconon_application:folder" class="it.cnr.jconon.service.application.ApplicationBulkInfoInjection">
		<property name="parentAspect" value="P:jconon_application:aspects"/>
		<property name="bulkInfos" ref="bulkInfoExtendAspects"/>
	</bean>
	<bean class="it.cnr.cool.service.I18nServiceLocation">
		<property name="locations">
			<list>
				<value>i18n.cool-jconon</value>
				<value>pages.call.call</value>
				<value>pages.call.convocazione</value>
			</list>
		</property>
	</bean>
	<bean name="pageService" class="it.cnr.cool.service.PageService" init-method="init"></bean>
	<bean id="helpdeskService" class="it.cnr.jconon.service.helpdesk.HelpdeskService"/>
	<bean id="helpdesk" class="it.cnr.jconon.rest.Helpdesk"/>
	<bean class="it.cnr.jconon.rest.ManageCall"/>
	<bean class="it.cnr.jconon.rest.ManageApplication"/>

	<bean id="siperService" class="it.cnr.cool.service.search.SiperService">
		<property name="urlAnadip" value="${siper.anadip.url}" />
		<property name="urlSedi" value="${siper.sedi.url}" />
	</bean>

	<bean class="it.cnr.cool.rest.Sedi"></bean>

	<bean id="cacheService" class="it.cnr.cool.cmis.service.impl.CacheServiceImpl"></bean>

</beans>